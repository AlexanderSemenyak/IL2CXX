<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>

    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="nunit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\IL2CXX\IL2CXX.csproj" />
  </ItemGroup>

  <Target Name="WriteCXXPath" AfterTargets="AfterBuild">
    <WriteLinesToFile File="$(OutputPath)CXXIncludePath" Overwrite="true" Lines="$(MSBuildProjectDirectory)/../IL2CXX/include" />
    <WriteLinesToFile File="$(OutputPath)CXXSourcePath" Overwrite="true" Lines="$(MSBuildProjectDirectory)/../IL2CXX/src" />
  </Target>
</Project>
